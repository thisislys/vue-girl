.day
  padding: 50px 10px 20px 10px
  p
   font-size: 0
   img
    width: 100%
  h1
   text-align: left;
   font-weight: 700;
   font-size: 16px;
   line-height 32px
   margin: 10px 0;
   display: -webkit-box;
   overflow: hidden;
   text-overflow: ellipsis;
   word-wrap: break-word;
   white-space: normal !important;
   -webkit-line-clamp: 1;
   -webkit-box-orient: vertical;
  h3
   color: #000000;
   text-align: left;
   padding: 10px 0
   font-size: 16px;
   font-weight: 700;
  ul
   color: #000000;
   text-align: left;
   padding-left: 10px;
   font-size: 14px;
   font-weight: 400;
   li
    line-height: 20px;
    padding: 5px 0
    -webkit-animation-name: bounceInRight;
    animation-name: bounceInRight;
